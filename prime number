#include<stdio.h>
    int prime(int num){
        if(num<=1){
            return 0;
        }
        for(int i=2;i*i<=num;i++){
            if(num%1==0){
                return 0;
            }
        }
        return 1;
    }
int main(){
    int n;
    printf("Enter a number: ");
    scanf("%d",&n);
